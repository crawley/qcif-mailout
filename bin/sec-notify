#!/bin/bash

if [ $# -eq 0 ] ; then
    echo usage "bin/sec-notify [<mailout opts>] <type> <IP>..."
    exit 1
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. $DIR/process-options.sh

TYPE=
for ARG in $* ; do
    case $ARG in
        -*)
            echo misplaced option $ARG
            exit 1
            ;;
        *)
            if [ -z "$TYPE" ] ; then
                TYPE=${ARG}
            else
                ARGS="$ARGS --ip ${ARG}"
            fi
            ;;
    esac
done

if [ -z "$TYPE" ] ; then
    echo "Missing <type> argument"
    exit 1
fi
case $TYPE in
    poodle)
        DESCRIPTION="POODLE SSL vulnerability"
        ARTICLE=207860043
        ;;
    opendir)
        DESCRIPTION="Open Directory Listing vulnerability"
        ARTICLE=115001067026
        ;;
    elasticsearch)
        DESCRIPTION="Open Elasticsearch services vulnerability"
        ARTICLE=115001373803
        ;;
    *)
        echo "Unknown <type>"
        exit 1
esac

URL=https://support.qriscloud.org.au/hc/en-us/articles/$ARTICLE

cd ~/git/qcif-mailout
. venv/bin/activate

mailout/mailout.py $MARGS \
                   -s "Security alert: Instances with $DESCRIPTION" \
                   -p "description=$DESCRIPTION" -p "url=$URL" \
                   -C support@qriscloud.org.au -C support@ehelp.edu.au \
                   --template sec-notify --by-group instances $ARGS \
                   --managers --members

exit
