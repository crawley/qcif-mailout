#!/bin/sh

if [ $# -eq 0 ] ; then
    echo usage "bin/poodle <IP> ..."
    exit 1
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. $DIR/process-options.sh

for ARG in $* ; do
    case $ARG in
        -*)
            echo misplaced option $ARG
            exit 1
            ;;
        *)
            ARGS="$ARGS --ip ${ARG}"
            ;;
    esac
done

cd ~/git/qcif-mailout
. venv/bin/activate

mailout/mailout.py $MARGS \
                   -s "Security alert: QRIScloud NeCTAR instance vulnerability" \
                   --template openssh --by-group instances $ARGS \
                   --managers --members

exit
