#!/bin/sh

if [ $# -eq 0 ] ; then
    echo usage "bin/poodle <IP> ..."
    exit 1
fi

ARGS=

for IP in $* ; do
    ARGS="$ARGS --ip ${IP}"
done

cd ~/git/qcif-mailout
. venv/bin/activate

mailout/mailout.py --debug -y \
                   -s "Security alert: QRIScloud NeCTAR instance vulnerability" \
  --template openssh --by-group instances $ARGS --managers --members

exit
